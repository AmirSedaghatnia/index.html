<body>
    <div class="container">
        <h1>F1 Predictor</h1>
        <div id="user-info"></div>
        <button id="make-prediction">Make Prediction</button>
        <div id="predictions"></div>
    </div>
    <script>
        let tg = window.Telegram.WebApp;
        tg.expand();

        document.addEventListener('DOMContentLoaded', function() {
            let userInfo = document.getElementById('user-info');
            userInfo.textContent = `Welcome, ${tg.initDataUnsafe.user.first_name}!`;

            let makePredictionBtn = document.getElementById('make-prediction');
            makePredictionBtn.addEventListener('click', function() {
                // Here you would typically make an API call to your backend
                // For this example, we'll just show a mock prediction
                let predictions = document.getElementById('predictions');
                predictions.innerHTML = `
                    <h3>Your Prediction:</h3>
                    <ol>
                        <li>Max Verstappen</li>
                        <li>Lewis Hamilton</li>
                        <li>Charles Leclerc</li>
                        <li>Lando Norris</li>
                        <li>Sergio Perez</li>
                        <li>George Russell</li>
                        <li>Carlos Sainz</li>
                        <li>Fernando Alonso</li>
                        <li>Oscar Piastri</li>
                        <li>Pierre Gasly</li>
                    </ol>
                `;
                tg.sendData(JSON.stringify({action: 'prediction_made'}));
            });
        });
    </script>
</body>
